<%= form_for([@dictionary, @word], remote: true, html: {class: 'table-row', id: dom_id(@word)}) do |f| %>
  <% if false #@word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
      <% @word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-label">
    <%= f.label :word %>
  </div>
  <div class="cell">
    <%= f.text_field :word %>
  </div>
  <div class="col-label">
    <%= f.label :translation %>
  </div>
  <div class="cell">
    <%= f.text_field :translation %>
  </div>
  <div class="col-label">
    <%= f.label :pronunciation %>
  </div>
  <div class="cell">
    <%= f.text_field :pronunciation %>
  </div>
  <div class="cell">
    <%= f.submit %>
  </div>
  <div class="cell">
    <%= link_to 'Destroy', [@dictionary, @word], method: :delete, data: { confirm: 'Are you sure?',remote: true } if @word.persisted? %>
  </div>
<% end %>
