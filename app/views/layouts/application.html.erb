<!DOCTYPE html>
<html>
<head>
  <title>Lexicon</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div class="container">
    <div class="header">
      <h1 class="brand">
        lexicon;
      </h1>
      <% if user_signed_in? %>
        <nav>
          <%= link_to 'languages', dictionaries_path, class: :button %>
          <%= link_to('Sign out', destroy_user_session_path, :method => :delete, class: 'button sign-out destroy') %>
        </nav>
      <% end -%>
    </div>
    <div class="body">
      <%= content_for?(:content) ? yield(:content) : yield %>
    </div>
    </div>
  <%= javascript_include_tag 'application' %>
</body>
</html>
